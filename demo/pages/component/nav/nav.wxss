/* pages/component/nav/nav.wxss */
.ScrollNav.nav {
  width: 200rpx;
  white-space: initial;
}

.ScrollNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
}

.ScrollNav.nav .cu-item.cur {
  background-color: #f1f1f1;
}
.ScrollNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}
.ScrollBox{
  display: flex;
}
.ScrollMain{
  background-color: #f1f1f1;
}